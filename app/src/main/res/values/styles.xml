<resources>
    <style name="NoShadowBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@drawable/selector</item> <!-- 아이콘 색상 상태 목록 적용 -->
    </style>

    <style name="AppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>
    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>
