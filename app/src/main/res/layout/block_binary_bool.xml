<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/block3"
    android:padding ="5dp">

    <FrameLayout
        android:id="@+id/block_binaryBool_leftOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:background="@drawable/block4" />

    <TextView
        android:id="@+id/block_binaryBool_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:minHeight="30dp"
        android:padding ="5dp"
        android:gravity="center"
        android:fontFamily="@font/pretendard1"
        android:textSize="13dp"
        android:text="그리고"
        android:textColor="@color/black"/>

    <FrameLayout
        android:id="@+id/block_binaryBool_rightOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:background="@drawable/block4" />

</LinearLayout>