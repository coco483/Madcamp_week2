<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/block3"
    android:padding ="5dp">

    <ToggleButton
        android:id="@+id/block_trade_plan_tradeType"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textOff="사기"
        android:textOn="팔기"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard1"
        android:background="@drawable/block4"
        app:cardElevation="0dp"/>


    <AutoCompleteTextView
        android:id="@+id/block_trade_plan_stockID_ACTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:text=""
        android:hint="주식종목"
        android:completionThreshold="1"
        android:inputType="text"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/black"/>

    <FrameLayout
        android:id="@+id/block_trade_plan_stockAmount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:minWidth="100dp"
        android:background="@drawable/block4">

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  주"
        android:textSize="13dp"
        android:textColor="@color/black"/>

</LinearLayout>